<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.panthers.bank.view.MainController">

    <HBox alignment="CENTER" spacing="20">
        <Label fx:id="titleText" text="Bank L&amp;D"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button text="Attend Client" onAction="#onAttendButtonClick"/>
        <Button text="Add Client" onAction="#onAddClientButtonClick"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Label fx:id="infoText"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <TableView fx:id="clientsWaitingTable" prefWidth="150">
            <columns>
                <TableColumn fx:id="idColumnT1" text="id" prefWidth="50">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="transactionColumnT1" text="Transacciones" prefWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="transactionNumber"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>

        </TableView>
        <TableView fx:id="clientsAttendedTable" prefWidth="50">
            <columns>
                <TableColumn fx:id="idColumnT2" text="id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </HBox>

</VBox>

